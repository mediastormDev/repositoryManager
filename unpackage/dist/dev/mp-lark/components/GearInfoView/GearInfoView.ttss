.drawer_header {
  display: flex;
  align-items: center;
}
.drawer_header .drawer_content {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}
.drawer_header .drawer_content .gear_name {
  font-size: 16px;
  font-weight: 600;
  color: #24252C;
}
.drawer_header .drawer_content .gear_remark {
  font-size: 12px;
  font-weight: 400;
  color: #646464;
  margin-top: 7px;
}
.drawer_header .drawer_content .gear_others {
  display: flex;
  align-items: center;
  margin-top: 7px;
}
.drawer_header .drawer_content .gear_others > .gear_tag + .gear_tag {
  margin-left: 3px;
}
.drawer_header .drawer_content .gear_others .gear_status_tag.free {
  color: #41D9AD;
  background-color: #ecfbf6;
}
.drawer_header .drawer_content .gear_others .gear_status_tag.booked {
  color: #FFAF00;
  background-color: #fff7e5;
}
.drawer_header .drawer_content .gear_others .gear_status_tag.lend {
  color: #FF1C30;
  background-color: #ffe8ea;
}
.drawer_header .drawer_content .gear_others .gear_tag {
  padding: 1px 5px;
  font-size: 11px;
  border-radius: 4px;
  background-color: #F4F6F7;
  color: #646464;
}
.drawer_header .drawer_img {
  width: 100px;
  height: 100px;
  background: #FFFFFF;
  border: 1px solid #EEEEEE;
}
.drawer_header .drawer_img_small {
  width: 60px;
  height: 60px;
  background: #FFFFFF;
  border: 1px solid #EEEEEE;
}
