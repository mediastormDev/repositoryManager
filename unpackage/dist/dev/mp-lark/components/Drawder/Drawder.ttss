.drawer_bg {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.1);
  animation-name: opacityAn;
  animation-duration: 0.1s;
}
.drawer_bg .drawer_body {
  background-color: white;
  padding: 10px;
  border-radius: 10px 10px 0px 0px;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  min-height: 350px;
  transform: translateY(20%);
  animation-name: translateYAn;
  animation-duration: 0.1s;
}
@keyframes translateYAn {
0% {
    bottom: -100%;
}
100% {
    bottom: 0px;
}
}
@keyframes opacityAn {
0% {
    opacity: 0;
}
100% {
    opacity: 1;
}
}
