.content {
  display: flex;
  flex-direction: column;
  flex: 1;
  height: 100vh;
}
.content .body {
  display: flex;
  flex: 1;
}
.button_view {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 10px;
  background-color: white;
}
.button_view .coll_button {
  border-radius: 10px;
  border: 1px solid #EEEEEE;
  color: #646464;
  background-color: white;
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
  text-align: center;
  margin-right: 6px;
}
.button_view .book_button {
  border-radius: 10px;
  border: none;
  color: white;
  background: #FC6294;
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
  text-align: center;
}
